<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.recommend.recommend.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/header_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/course_search"
            android:layout_marginTop="15dp"></include>
    </RelativeLayout>
    <!--功能菜单-->
    <LinearLayout
        android:id="@+id/container_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/menu_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            >
            <Button
                android:id="@+id/btn_course"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:background="@drawable/menu_course_iconclicked_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_course"
                android:textColor="#000000"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            >
            <Button
                android:id="@+id/btn_select"
                android:layout_width="73dp"
                android:layout_height="30dp"
                android:background="@drawable/menu_select_icon_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_select"
                android:textColor="#000000"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
